{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/mediawiki"
	],
	"globals": {
		"mediaWiki": false,
		"jQuery": false
	},
	"rules": {
		"valid-jsdoc": "off",
		"wrap-iife": "off",
		"new-cap": "off",
		"no-use-before-define": "off",
		"no-unused-vars": "off",
		"no-undef": "off",
		"no-alert": "off",
		"mediawiki/class-doc": "off",
		"mediawiki/msg-doc": "off"
	}
}
